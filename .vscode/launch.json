{
    "configurations": [
    {
        "name": "Launch file",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "main.go",
        // "-ldflags='-X 'main/update.VersionBuild=${input:shortDate}''"
        "buildFlags": [
            "-ldflags=-X main/update.VersionBuild=2024-02-01T19:18:43Z"
        ],
    }   
    ],
    "inputs": [
        {
            "id": "shortDate",
            "type": "command",
            "command": "extension.commandvariable.dateTime",
            "args": {
            "locale": "es-ES",
            "options": {
                "weekday": "long",
                "year": "numeric",
                "month": "2-digit",
                "day": "2-digit",
                "hour12": false,
                "hour": "2-digit",
                "minute": "2-digit",
                "second": "2-digit"
            },
            "template": "${year}-${month}-${day}T${hour}:${minute}:${second}"
            }
        }
    ]
}