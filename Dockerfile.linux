FROM cgr.dev/chainguard/go@sha256:7cb54cc4140b161dbdb0bb32fdc08f096c3df5ccd889a2fef2dd19ab4dacd46e AS builder

WORKDIR /build

COPY . .
RUN go mod download && go mod verify
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o ./app ./*.go
# chainguard only have free latest :(
FROM cgr.dev/chainguard/static:latest
COPY --from=builder /build/app /app
ENTRYPOINT ["/app"]
